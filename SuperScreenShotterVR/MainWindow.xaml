<Window x:Class="SuperScreenShotterVR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperScreenShotterVR"
        mc:Ignorable="d"
        Title="SuperScreenShotterVR" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <GroupBox Header="Capture" DockPanel.Dock="Top">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="CheckBox_DelayCapture" Content="Delay capture with: " Checked="CheckBox_DelayCapture_Checked" Unchecked="CheckBox_DelayCapture_Checked"/>
                    <TextBox x:Name="TextBox_CaptureDelay" IsEnabled="False">0</TextBox>
                    <Label Content="ms"/>
                </StackPanel>
                <CheckBox x:Name="CheckBox_SuperSampling" Content="Attempt super sampling boost for capture" Checked="CheckBox_SuperSampling_Checked" Unchecked="CheckBox_SuperSampling_Checked"/>
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="CheckBox_CaptureTimer" Content="Capture on a timer every: " Checked="CheckBox_CaptureTimer_Checked" Unchecked="CheckBox_CaptureTimer_Checked"/>
                    <TextBox x:Name="TextBox_TimerSeconds" Text="0"/>
                    <Label Content="seconds"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Output" DockPanel.Dock="Top">
            <StackPanel Orientation="Vertical">
                <CheckBox x:Name="CheckBox_FilenamePrefix"  Content="Prefix filename with app ID" Checked="CheckBox_FilenamePrefix_Checked" Unchecked="CheckBox_FilenamePrefix_Checked"/>
                <CheckBox x:Name="CheckBox_Subfolder" Content="Save in subfolder based on app ID" Checked="CheckBox_Subfolder_Checked" Unchecked="CheckBox_Subfolder_Checked"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Directory:"/>
                    <Button x:Name="Button_BrowseDirectory" Content="Browse..." Click="Button_BrowseDirectory_Click"/>
                    <TextBox x:Name="TextBox_Directory" Text="C:\Bla bla bla" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Notifications" DockPanel.Dock="Top">
            <StackPanel Orientation="Vertical">
                <CheckBox x:Name="CheckBox_Notifications" Content="Display notification on screenshot capture" Checked="CheckBox_Notifications_Checked" Unchecked="CheckBox_Notifications_Checked"/>
                <CheckBox x:Name="CheckBox_Thumbnail"  Content="Display thumbnail of captured screenshot" Checked="CheckBox_Thumbnail_Checked" Unchecked="CheckBox_Thumbnail_Checked"/>
                <CheckBox x:Name="CheckBox_Audio" Content="Play sound with notification" Checked="CheckBox_Audio_Checked" Unchecked="CheckBox_Audio_Checked"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Custom sound"/>
                    <Button x:Name="Button_BrowseAudio" Content="Browse..." Click="Button_BrowseAudio_Click"/>
                    <TextBox x:Name="TextBox_CustomAudio" Text="C:\Bla bla bla" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="System">
            <StackPanel Orientation="Vertical">
                <CheckBox x:Name="CheckBox_ReplaceShortcut" Content="Replace SteamVR screenshot function" Checked="CheckBox_ReplaceShortcut_Checked" Unchecked="CheckBox_ReplaceShortcut_Checked"/>
                <StackPanel Orientation="Horizontal">
                    <CheckBox x:Name="CheckBox_LaunchMinimized" Content="Launch minimized " Checked="CheckBox_LaunchMinimized_Checked" Unchecked="CheckBox_LaunchMinimized_Checked"/>
                    <CheckBox x:Name="CheckBox_Tray" Content="to tray" Checked="CheckBox_Tray_Checked" Unchecked="CheckBox_Tray_Checked"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </DockPanel>
</Window>
